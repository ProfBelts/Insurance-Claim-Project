<div aria-live="polite" aria-atomic="true" style="position: fixed; top: 20px; right: 20px; z-index: 1050;">
  <!-- Flash Messages Toasts -->
  <% flash.each do |type, message| %>
    <% toast_class = case type.to_sym
      when :notice then 'bg-success text-white' # Success message
      when :alert  then 'bg-danger text-white'  # Error message
      else 'bg-info text-white'                 # Default style
    end %>

    <div class="toast <%= toast_class %> fade show" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
      <div class="toast-header">
        <strong class="mr-auto"><%= type.capitalize %></strong>
        <small class="text-muted">Just now</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        <%= message %>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Initialize Bootstrap toasts
    var toastElements = document.querySelectorAll('.toast');
    toastElements.forEach(function(toast) {
      new bootstrap.Toast(toast).show();
    });
  });
</script>
