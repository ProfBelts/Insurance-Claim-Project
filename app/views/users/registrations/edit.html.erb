<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <h2 class="text-center mb-4"><i class="fas fa-user-edit"></i> Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>


      <!-- Profile Picture --><div class="mb-3">
      <%= f.label :profile_picture, "Upload Profile Picture", class: "form-label" %>
      <%= f.file_field :profile_picture, class: "form-control" %>
    </div>
    
      <!-- Name -->
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name" %>
      </div>

      <!-- Gender -->
      <div class="mb-3">
        <%= f.label :gender, class: "form-label" %>
        <%= f.select :gender, options_for_select([["Male", 1], ["Female", 2]], resource.gender), class: "form-select" %>
      </div>

      <!-- Phone Number -->
      <div class="mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter your phone number" %>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <!-- Confirmation Message -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">
          Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
        </div>
      <% end %>

      <!-- Password -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %> 
        <i class="text-muted">(Leave blank if you don't want to change it)</i>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <!-- Password Confirmation -->
      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <!-- Current Password -->
      <div class="mb-3">
        <%= f.label :current_password, class: "form-label" %>
        <i class="text-muted">(We need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <!-- Submit Button -->
      <div class="d-flex justify-content-between">
        <%= f.submit "Update Profile", class: "btn btn-primary px-4" %>
        <%= link_to "Back", :back, class: "btn btn-secondary px-4" %>
      </div>
    <% end %>

    <!-- Cancel Account -->
    <hr class="my-4">
    <h4 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Cancel My Account</h4>
    <p class="text-muted">Unhappy? You can delete your account below.</p>
    <%= button_to "Cancel My Account", registration_path(resource_name), 
          data: { confirm: "Are you sure you want to delete your account permanently?", turbo_confirm: "Are you sure?" }, 
          method: :delete, class: "btn btn-danger" %>
  </div>
</div>
