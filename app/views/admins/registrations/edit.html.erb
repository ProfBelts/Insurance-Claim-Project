<div class="container mt-5">
  <div class="card shadow-lg p-4">
    <h2 class="mb-4 text-center">Edit Profile</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :name, class: "form-label fw-bold" %>
        <%= f.text_field :name, class: "form-control", required: true, placeholder: "Enter your full name" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-bold" %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-bold" %> 
        <small class="text-muted">(leave blank if you don't want to change it)</small>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label fw-bold" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: "form-label fw-bold" %> 
        <small class="text-muted">(required to confirm changes)</small>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", required: true %>
      </div>

      <div class="d-flex justify-content-between">
        <%= f.submit "Update Profile", class: "btn btn-primary px-4" %>
        <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>

    <hr class="my-4">

    <h3 class="text-danger text-center">Cancel My Account</h3>
    <p class="text-center">Unhappy? You can delete your account permanently.</p>
    <div class="text-center">
      <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure? This action is irreversible.", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
